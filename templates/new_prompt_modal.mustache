    <form method="POST" name="prompt-form">
    <input type="hidden" name="action">
    <input type="hidden" name="id" id="prompt-id">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="newPromptModalLabel">{{#str}}add_prompt_title, smartlink{{/str}}</h2>
        <button type="button" class="close modal-hide" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-left p-5">
        <div class="form-group row">
            <div class="col-md-12 prompt-edit-warning">{{#str}}prompt_edit_warning, smartlink{{/str}}</div>
            <input type="hidden" id="lang-selection-input" name="language">
            <label class="col-sm-3 col-form-label">{{#str}}language, core{{/str}}</label>
            <div class="col-sm-9">
                <div class="dropdown show">
                    <a class="btn btn-secondary dropdown-toggle transparent-bg" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span id="lang-selection-text"><span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        {{#lang_lsit}}
                          <button class="dropdown-item lang-selection" data-id="{{code}}">{{name}}</button>
                        {{/lang_lsit}}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 col-form-label">{{#str}}description, core{{/str}}</label>
            <div class="col-sm-9">
                <textarea class="form-control" rows="2" name="description" required></textarea>
            </div>
        </div>
